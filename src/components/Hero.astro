---
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  image: string;
}

const { title, subtitle, ctaText = "Get a Free Quote", ctaLink = "/quote", image } = Astro.props;
---

<section class="relative bg-neutral-dark text-white">
  <div class="absolute inset-0 z-0">
    <img 
      src={image} 
      alt="Moving professionals at work" 
      class="w-full h-full object-cover opacity-40"
    />
  </div>
  
  <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
    <div class="max-w-3xl">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">{title}</h1>
      <p class="text-xl md:text-2xl mb-8">{subtitle}</p>
      <a 
        href={ctaLink} 
        class="inline-block bg-secondary hover:bg-secondary-light text-white font-bold py-3 px-8 rounded-md text-lg transition duration-300 ease-in-out transform hover:scale-105"
      >
        {ctaText}
      </a>
    </div>
  </div>
</section>
